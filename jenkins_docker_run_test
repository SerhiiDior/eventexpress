#!groovy
// Run docker build
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
        }
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }

    
    stages("start project"){
        stage ("run tests") {
            steps {
                echo " ============== send_resalt =================="
                sh '''
                docker run  -v directory:/workdir svdior/pyslim 
                '''
                if (build == FAILURE){
                    echo "crash"}
        }
    } 
}
